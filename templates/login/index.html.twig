{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
{% include 'layout/_partial.html.twig' %}
<div class="row">
    <div class="col-md-3 mx-auto mt-5">
        <h1 class="text-center my-5">Log in !</h1>
            <form method="post" action="{{ path('app_login') }}">
                {% if error %}
                    <div class="alert alert-danger text-center mb-3 rounded" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }} </div>
                {% endif %}
                <div class="form-group">
                    <label for="username" class="mb-3">Email:</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label for="password" class="mt-3 mb-3">Password:</label>
                    <input type="password" name="_password" id="password" class="form-control" required>
                </div>
                <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Connect</button>
                <p class="text-center text-muted mt-3">Do not have an account ? <a href="mailto:crufin@kayentis.com?subject=Demande d'accÃ¨s biblio">Ask for one !</a>
            </form>
    </div>
</div>
{% endblock %}